page {
	padding: 0 20rpx;
	padding-top: 56px;
}

/* 搜索框 */
.search {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
}

/* 热门搜索 */
.hot-search {
	padding: 10rpx;
}

.hot-search .hot-list {
	display: flex;
	flex-wrap: wrap;
}

.hot-search .tag {
	margin-top: 20rpx;
	margin-right: 20rpx;
	padding: 10rpx 12rpx;
	border-radius: 16rpx;
	background-color: #fff;
	font-size: 26rpx;
}

.hot-search .tag:first-of-type {
	color: #26ce8a;
}

/* 建议搜索 */
.suggest-search {
	padding: 10rpx;
}

.suggest-search .title {
	font-size: 34rpx;
	font-weight: 700;
	color: #26ce8a;
}

.suggest-search .item {
	display: flex;
	align-items: center;
	margin-top: 16rpx;
}

.suggest-search .item .icon {
	width: 66rpx;
	margin-left: -20rpx;
}

.suggest-search .item .text {
	font-size: 28rpx;
}

/* 搜索结果 */
.result .title {
	font-size: 32rpx;
	color: #26ce8a;
}