page {
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #f3f3f3;
}

.section {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
}

.user-info .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.user-info .nickname {
  margin-left: 20rpx;
  font-size: 30rpx;
}

