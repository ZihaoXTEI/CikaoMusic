.item{
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  font-size: 24rpx;
}

/* 歌单封面 */
.item .album{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

/* 文字内容 */
.item .info{
  flex: 1;
  margin-left: 20rpx;
}

.item .info .name{
  font-size: 28rpx;
}

.item .info .count{
  color: #999
}

/* 删除歌单图标 */
.item .icon{
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #999;
}