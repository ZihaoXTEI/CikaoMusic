.song-item {
  display: flex;
  align-items: center;
  margin: 36rpx 0 10rpx;
}

/* 歌曲序号 */
.song-item .index {
  font-size: 30rpx;
  padding: 12rpx;
}

/* 歌曲信息 */
.song-item .info {
  flex: 1;
  margin-left: 16rpx;
}

.info .name {
  font-size: 30rpx;
}

.info .source {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.info .source .icon {
  width: 38rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.info .source .dots {
  margin: 0 6rpx;
}